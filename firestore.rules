
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Leads can be created, read, updated, or deleted by the user who owns them.
    match /leads/{leadId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
    }

    // Properties can be created, read, updated, or deleted by the user who owns them.
    match /properties/{propertyId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
    }

    // Documents can be created, read, updated, or deleted by the user who owns them.
    match /documents/{documentId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
    }

    // Notifications can only be read by the user they are intended for.
    // Creation is handled by the backend function.
    match /notifications/{notificationId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create, update, delete: if false; // Deny client-side modification
    }
  }
}
